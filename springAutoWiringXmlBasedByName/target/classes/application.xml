<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean class="com.example.byName.Employee" name="emp" autowire="byName">
<property name="name" value="vivek savin"></property>
</bean>

<bean class="com.example.byName.Address" name="address" >
<property name="city" value="mohali"></property>
<property name="state" value="chandigarh"></property>
</bean>
</beans>