<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean class="com.example.byConstructor.Employee" name="emp" autowire="constructor">
<property name="name" value="raman chaudhari"></property>
</bean>
<bean class="com.example.byConstructor.Address" name="address">
<property name="city" value="Ghaziabad"></property>
<property name="state" value="hapur"></property>
</bean>
</beans>